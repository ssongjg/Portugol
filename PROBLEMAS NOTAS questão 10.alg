Algoritmo "problemas notas"


Var
nota1,nota2, somanotas: real

Inicio

  escreva("Digite sua primeira nota: ")
  leia(nota1)
  
  escreva("Digite sua segunda nota: ")
  leia(nota2)
  
  somanotas <- (nota1+nota2)
  escreva("NOTA FINAL: ", somanotas:4:2)

  escreval
  
  se somanotas <60.00 entao
     escreva("ALUNO REPROVADO")
  fimse


Fimalgoritmo
